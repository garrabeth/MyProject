<div class="navbar navbar-inverse navbar-fixed-top" id="navigationBar" role="navigation">
    <div class="container" id="navContainer">
        <div class="navbar-header" id="navHeader">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" id="navButton">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
