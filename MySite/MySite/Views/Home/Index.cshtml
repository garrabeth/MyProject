    </div>
</div>

    <div id="sections" class="container">
        <section id="home" data-type="background" data-speed="10" class="pages">
            <div id="homeBackground"></div>
            <div id="emailModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Send a mail!</h4>
                        </div>
                        <div class="modal-body" id="modalContent">
                            <form>
                                <div class="form-group" id="emailField">
                                    <label for="emailInput">Email adress</label>
                                    <input type="email" class="form-control" placeholder="Enter mail" />
                                </div>
                                <div class="form-group" id="nameField">
                                    <label for="nameInput">Name</label>
                                    <input type="text" class="form-control" placeholder="Name"/>
                                </div>
                                <div class="form-group" id="messageField">
                                    <label for="messageInput">Message</label>
                                    <textarea class="form-control" rows="5"></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal" id="sendButton">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="content" data-type="background" data-speed="10" class="pages">
            <div id="contentBackground"></div>
            <article class="headers">SKILLS</article>
            <div id="gaugesContainer" class="container">
                <ul id="ulGauges">
                    <li class="liGauges">
                        <div class="gauges">
                            <div class="bars" id="bar1"></div>
                            <h1>Test</h1>
                        </div>
                    </li>
                    <li class="liGauges">
                        <div class="gauges">
                            <div class="bars" id="bar2"></div>
                            <h1>Test</h1>
                        </div>
                    </li>
                    <li class="liGauges">
                        <div class="gauges">
                            <div class="bars" id="bar3"></div>
                            <h1>Test</h1>
                        </div>
                    </li>
                    <li class="liGauges">
                        <div class="gauges">
                            <div class="bars" id="bar4"></div>
                            <h1>Test</h1>
                        </div>
                    </li>
                </ul>
            </div>

        </section>

        <section id="footer" data-type="background" data-speed="10" class="pages">
            <div id="footerBackground"></div>
            <article class="headers">REACH OUT</article>
            <div id="leftHeader" class="container">
                <div id="socialContainer" class="container">
                    <ul id="ulSocial">
                        <li class="liSocial">
                            <button class="btn btn-default" id="fbButton" href="">
                                <img class="img-responsive" src="~/images/fb-icon.png" />
                            </button>
                        </li>
                        <li class="liSocial">
                            <button class="btn btn-default" data-toggle="modal" data-target="#emailModal">
                                <img class="img-responsive" src="~/images/gmail-icon.png" />
                            </button>
                        </li>
                        <li class="liSocial">
                            <button class="btn btn-default" id="lnButton">
                                <img class="img-responsive" src="~/images/linkedin-logo.png" />
                            </button>
                        </li>
                        <li class="liSocial">
                            <button class="btn btn-default">
                                <img class="img-responsive" src="~/images/phone.png" />
                            </button>
                        </li>
                    </ul>
                </div>
            </div>

        </section>
    </div>
    
